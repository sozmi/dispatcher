<resources>
    <!-- Base application theme. -->
    <style name="main_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/additional</item>
        <item name="colorSecondaryVariant">@color/additional_variant</item>
        <item name="colorOnSecondary">@color/on_additional</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/additional</item>
        <item name="colorAccent">@color/on_primary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>