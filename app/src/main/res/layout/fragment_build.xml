<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.BuildFragment"
    android:padding="10dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Координаты" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456,234t65432"
        android:autofillHints=""
        android:inputType="text">

    </EditText>
    <Button
        android:id="@+id/changeCoordinateBuildButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="изменить">
    </Button>
</LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Адрес:"/>
       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Москва, Оборонная улица, 5"
           android:inputType="text"
           android:autofillHints=""
           android:background="@drawable/gradient"
           android:paddingHorizontal="10dp"
           tools:ignore="LabelFor">

       </EditText>

   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип здания:"></TextView>
        <Spinner
            android:id="@+id/spinner_build"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:contentDescription="Выбор здания">

        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название:"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="МЧС РФ г. Твери №1"
            android:inputType="text"
            android:autofillHints=""
            tools:ignore="LabelFor">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стоимость постройки:"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100$"
            android:inputType="text"
            android:autofillHints=""
            tools:ignore="LabelFor">

        </EditText>

    </LinearLayout>
    <Button
        android:id="@+id/buildBuildingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Построить"/>
</LinearLayout>