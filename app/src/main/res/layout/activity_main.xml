<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Верхний бар-->
    <FrameLayout
        android:id="@+id/top_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"

                android:padding="10dp"
                android:text="@string/name_account" />

            <ImageButton
                style="@style/img_btn"
                android:layout_width="60dp"
                android:contentDescription="@string/account"
                android:src="@drawable/ic_account" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_primary_color"
                android:layout_marginStart="2dp"
                android:padding="10dp"
                android:text="@string/money">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:background="@color/light_primary_color"
                android:padding="10dp"
                android:text="@string/premium_money">

            </TextView>
        </LinearLayout>


    </FrameLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_view"
        android:name="com.sozmi.dispetcher.MapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_menu"
        android:layout_above="@id/bottom_menu"
        tools:layout="@layout/yandex_map"/>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageButton
            style="@style/img_btn"
            android:src="@drawable/ic_building"
            android:contentDescription="@string/buildings"/>


        <ImageButton
            style="@style/img_btn"
            android:src="@drawable/ic_task"
            android:contentDescription="@string/tasks"/>

        <ImageButton
            style="@style/img_btn"
            android:src="@drawable/ic_radio"
            android:contentDescription="@string/radio"/>

        <ImageButton
            style="@style/img_btn"
            android:src="@drawable/ic_map"
            android:contentDescription="@string/map"/>
    </LinearLayout>

</RelativeLayout>
